<?xml version='1.0' encoding='utf-8'?>
<!-- the reference template of board building tool about SDIO -->
<ui name="TP">
	<!--

		focaltech_ts@38{
			compatible = "focaltech,focaltech_ts";
			reg = <0x38>;
			gpios = <&d_gpio_gpio 81 0
				&d_gpio_gpio 82 0>;
			vdd_name = "vdd28";
			virtualkeys = <130 1360 80 60
                                   373 1360 80 60
                                   630 1360 80 60>;
			TP_MAX_X = <720>;
			TP_MAX_Y = <1280>;
		};
	-->
    <ui_pannel name="focaltech_ts">
        <dts_node ui_node_name="focal touch panel" name="focaltech_ts@38">
            <!-- GPIO  RST, INT-->
            <property dts_name="gpios" ui_value="&lt;&amp;d_gpio_gpio 81 0 &amp;d_gpio_gpio 82 0&gt;" ui_current_value="&lt;&amp;d_gpio_gpio 81 0 &amp;d_gpio_gpio 82 0&gt;"	 widget_type="edit" ui_comments="gpios这个属性有两组值，用户一般只需要修改GPIO number(如:81 82)即可。第一组第一个值&amp;d_gpio_gpio表示关联到节点d_gpio_gpio，第二个值81表示用于复位的gpio numnber为81，第三个值默认为0,第二组第一个值&amp;d_gpio_gpio表示关联到节点d_gpio_gpio，第二个值82表示用于用于中断的gpio numnber为82，第三个值默认为0" ui_name="reset and interrupt gpio number"/>
            <!-- vdd -->
            <property dts_name="vdd_name" ui_value="vdd28 | vdd18" ui_current_value="&quot;vdd28&quot;" widget_type="list" ui_comments="TP's default compatiblity" ui_name="vdd_name">
                <coder output_dts_value="&quot;vdd18&quot;" modify_ui_value="vdd18"/>
                <coder output_dts_value="&quot;vdd28&quot;" modify_ui_value="vdd28"/>
            </property>
            <property dts_name="virtualkeys" ui_value="&lt;130 1360 80 60 373 1360 80 60 630 1360 80 60&gt;"	 ui_current_value="&lt;130 1360 80 60 373 1360 80 60 630 1360 80 60&gt;"	 widget_type="edit" ui_comments="virtualkeys坐标: APK select,home,back." ui_name="virtualkeys">
                <coder output_dts_value="&lt;130 1360 80 60 373 1360 80 60 630 1360 80 60&gt;"	 modify_ui_value="&lt;130 1360 80 60 373 1360 80 60 630 1360 80 60&gt;"	/>
            </property>
            <!-- TP_MAX_X -->
            <property dts_name="TP_MAX_X" ui_value="&lt;720&gt;" ui_current_value="&lt;720&gt;" widget_type="edit" ui_comments="TP max X, normal value: 480,720,800..." ui_name="TP_MAX_X">
                <coder output_dts_value="&lt;720&gt;" modify_ui_value="&lt;720&gt;"	/>
            </property>
            <!-- TP_MAX_Y -->
            <property dts_name="TP_MAX_Y" ui_value="&lt;1280&gt;" ui_current_value="&lt;1280&gt;" widget_type="edit" ui_comments="TP max Y, normal value: 960,1280..." ui_name="TP_MAX_Y">
                <coder output_dts_value="&lt;1280&gt;"	 modify_ui_value="&lt;1280&gt;"	/>
            </property>
        </dts_node>
    </ui_pannel>
</ui>
