<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/confirm_cancel"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/alert_dialog_cancel" >
    </Button>

    <Button
        android:id="@+id/confirm_retry"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/alert_dialog_retry" >
    </Button>

    <Button
        android:id="@+id/confirm_fail"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/alert_dialog_fail" >
    </Button>

    <Button
        android:id="@+id/confirm_pass"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/alert_dialog_pass" >
    </Button>
</LinearLayout>