<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/test_info_title"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dip" >

            <TextView
                android:id="@+id/testinfo_sn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device_sn"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/test_info_sn_dec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dip" >

            <TextView
                android:id="@+id/testinfo_imei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test_info_imei"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/test_info_imei_dec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dip" >

            <TextView
                android:id="@+id/testinfo_blt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test_info_blt"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/test_info_blt_dec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dip" >

            <TextView
                android:id="@+id/testinfo_wifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wifi_addr"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/test_info_wifi_dec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dip" >

            <TextView
                android:id="@+id/testinfo_phase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test_info_phase_check"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/test_info_phase_dec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dip" >

            <TextView
                android:id="@+id/testinfo_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sim_test_result"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/test_info_test_dec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>