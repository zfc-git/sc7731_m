<resources>
    <style name="MyFavoritesTheme" parent="@android:style/Theme.Material.Light">
        <item name="@android:actionBarStyle">@style/ActionBarStyle.Default</item>
    </style>

    <style name="ActionBarStyle.Default" parent="@android:style/Widget.Material.ActionBar">
        <item name="android:displayOptions">showTitle</item>
        <item name="android:background">@color/title_background</item>
        <item name="android:backgroundStacked">@color/title_background</item>
        <item name="android:titleTextStyle">@style/MyFavoritesActionBarTitleStyle</item>
        <item name="android:height">@dimen/title_height</item>
    </style>

    <style name="MyFavoritesActionBarTitleStyle" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
