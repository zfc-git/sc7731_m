<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- API 14 theme customizations can go here. -->
    </style>

    <style name="CustomTheme" parent="BugleTheme">
        <item name="android:actionMenuTextAppearance">@style/ActionBarMenuTextStyle</item>
    </style>

    <style name="ActionBarMenuTextStyle">
        <item name="android:textSize">@dimen/actionbar_menu_text_size</item>
    </style>

    <style name="CustomTheme.SortMsgListActivity" parent="CustomTheme">
        <item name="android:windowBackground">@android:color/background_light</item>
    </style>

    <style name="CustomTheme.MessageDetailsActivity" parent="CustomTheme">
        <item name="android:windowBackground">@color/conversation_background</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="android:fastScrollPreviewBackgroundLeft">@drawable/contacts_fastscroll_label_left</item>
        <item name="android:fastScrollPreviewBackgroundRight">@drawable/contacts_fastscroll_label_right</item>
    </style>

    <style name="CustomTheme.Spinner">
        <item name="android:background">@color/spinner_background_color_white</item>
        <item name="android:textColor">@color/spinner_text_color_dark</item>
        <item name="android:textAlignment">inherit</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/spinner_list_item_height</item>
    </style>

    <style name="contextmenu_textview">
        <item name="android:layout_height">@dimen/contextmenu_list_item_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/contextmenu_text_size</item>
        <item name="android:textColor">@color/color_dark</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingLeft">@dimen/contextmenu_text_padding</item>
        <item name="android:background">@drawable/contextmenu_list_item_selector</item>
        <item name="android:clickable">true</item>
    </style>

</resources>