<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_gravity="center" android:minHeight="?android:attr/listPreferredItemHeight"
    android:background="#ffffff">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#ffffffff"
            android:divider="@android:drawable/divider_horizontal_bright"
            android:focusable="true"
            android:drawSelectorOnTop="false"
            android:stackFromBottom="false" />
        <TextView
            android:id="@+id/empty_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/folder_loading"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:textColor="@color/text_color_empty_list"
            android:textSize="@dimen/text_size_empty_list"/>
    </RelativeLayout>
</FrameLayout>