<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/color_enhancement_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView android:id="@+id/contrast_icon"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:layout_centerVertical = "true"
            android:layout_alignParentLeft="true"
            android:paddingLeft="5dip"
            android:src="@drawable/edit_contrast_normal"/>
        <SeekBar android:id="@+id/contrast_seek_bar"
            style="@style/UCam.SeekBar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/contrast_icon"
            android:layout_centerVertical="true"
            android:progress="50"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"/>
        <TextView
            android:id = "@+id/contrast_percent"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:singleLine = "true"
            android:clickable="true"
            android:focusable="true"
            android:gravity = "center_vertical|right"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:layout_centerVertical = "true"
            android:layout_alignParentRight="true"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout android:id="@+id/light_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageView android:id="@+id/light_icon"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:layout_centerVertical = "true"
            android:layout_alignParentLeft="true"
            android:paddingLeft="5dip"
            android:src="@drawable/edit_light_normal"/>
        <SeekBar android:id="@+id/light_seek_bar"
            style="@style/UCam.SeekBar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/light_icon"
            android:layout_centerVertical="true"
            android:progress="50"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"/>
        <TextView
            android:id = "@+id/light_percent"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:singleLine = "true"
            android:clickable="true"
            android:focusable="true"
            android:gravity = "center_vertical|right"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:layout_centerVertical = "true"
            android:layout_alignParentRight="true"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout android:id="@+id/saturation_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageView android:id="@+id/saturation_icon"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:layout_centerVertical = "true"
            android:layout_alignParentLeft="true"
            android:paddingLeft="5dip"
            android:src="@drawable/edit_saturation_normal"/>
        <SeekBar android:id="@+id/saturation_seek_bar"
            style="@style/UCam.SeekBar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/saturation_icon"
            android:layout_centerVertical="true"
            android:progress="50"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"/>
        <TextView
            android:id = "@+id/saturation_percent"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:singleLine = "true"
            android:clickable="true"
            android:focusable="true"
            android:gravity = "center_vertical|right"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:layout_centerVertical = "true"
            android:layout_alignParentRight="true"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>