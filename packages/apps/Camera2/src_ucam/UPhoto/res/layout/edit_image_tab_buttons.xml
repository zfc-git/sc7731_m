<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <RadioGroup
        android:id="@+id/btn_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <!-- background -->
        <RelativeLayout
            android:id="@+id/layout_edit_background"
            android:layout_width="58dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageButton android:id="@+id/btn_edit_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-3dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/func_background_selector"/>
            <TextView android:id="@+id/tv_edit_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/edit_menu_item_color"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="11dip"
                android:text="@string/text_edit_background"
                android:singleLine="true"
                android:layout_marginTop="30dp"
                android:paddingBottom="2dip"
                android:layout_centerHorizontal="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"/>
            </RelativeLayout>

        <!-- editor -->
        <RelativeLayout
            android:id="@+id/layout_edit_editor"
            android:layout_width="58dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageButton android:id="@+id/btn_edit_editor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-3dp"
