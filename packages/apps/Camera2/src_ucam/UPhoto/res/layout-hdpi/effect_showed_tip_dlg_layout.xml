<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent" >

    <ImageView
        android:id="@+id/effect_showed_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dip"
        android:layout_marginRight="15dip"
        android:background="@drawable/tip_dlg_up_direct" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/effect_showed_imageview"
        android:layout_alignRight="@+id/effect_showed_imageview"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="24dp"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/effect_showed_txtview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/effect_showd_tip"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/l_dlg_tip_textview_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/effect_showd_small_tip"
            android:textColor="@color/effect_small_tip_color"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>