<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/collage_menu_item_layout_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/collage_grid_item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/collage_menu_item_bk"
        android:padding="6dip"
        android:scaleType="center" />

    <TextView
        android:id="@+id/collage_grid_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:alpha="0.24"
        android:clickable="false"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/collage_grid_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/collage_grid_item_id"
        android:layout_alignTop="@id/collage_grid_item_id"
        android:paddingLeft="8dip"
        android:paddingBottom="8dip"
        android:visibility="invisible"  >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dip"
            android:layout_marginTop="3dip"
            android:background="@drawable/collage_menu_del_btn"/>
    </LinearLayout>

</RelativeLayout>