<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/iv_free_puzzle_item_bk"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:background="@drawable/puzzle_menu_free_item_bk_selector" />
    <TextView
        android:id="@+id/tv_free_puzzle_free"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:background="@drawable/bt_bg_download_free"
        android:paddingLeft="4dip"
        android:paddingRight="4dip"
        android:textSize="10dip"
        android:textColor="@android:color/white"
        android:text="@string/puzzle_free"
        android:visibility="gone" />
</RelativeLayout>