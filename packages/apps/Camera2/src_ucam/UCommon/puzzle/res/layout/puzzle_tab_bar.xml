<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/puzzle_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:background="@drawable/puzzle_bottom_tab_bk"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="58dip"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/puzzle_tab_photo_grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/puzzle_bottom_tab_grid_selector"
                android:layout_marginTop="5dp"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="2dip"
                android:textSize="12dip"
                android:text="@string/puzzle_tab_templet"
                android:textColor="@color/puzzle_tab_textview_normal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="58dip"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageButton android:id="@+id/puzzle_tab_free_puzzle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/puzzle_bottom_tab_free_selector"
                android:layout_marginTop="5dp"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="2dip"
                android:textSize="12dip"
                android:text="@string/puzzle_tab_free"
                android:textColor="@color/puzzle_tab_textview_normal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="58dip"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/puzzle_tab_stitch_puzzle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/puzzle_bottom_tab_stitch_selector"
                android:layout_marginTop="5dp"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="2dip"
                android:textSize="12dip"
                android:textColor="@color/puzzle_tab_textview_normal"
                android:text="@string/puzzle_tab_stitch"/>
        </LinearLayout>
