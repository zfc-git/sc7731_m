<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/image_thumbnail_layout"
    android:layout_width = "@dimen/dd_item_thumbnails_width"
    android:layout_height = "@dimen/dd_item_thumbnails_height"
    android:descendantFocusability = "blocksDescendants"
    android:visibility="invisible"
    >
    <com.ucamera.ucomm.downloadcenter.ClickedImageView
        android:id = "@+id/image_thumbnail"
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:gravity ="center"
        android:layout_centerInParent = "true"
        />
    <CheckBox
        android:id = "@+id/checkbox"
        style = "@style/MyCheckBox"
        android:layout_width = "@dimen/dd_item_checkbox_width"
        android:layout_height = "@dimen/dd_item_checkbox_height"
        android:clickable = "false"
        android:layout_alignParentRight = "true"
        android:layout_alignParentTop = "true"
        />
</RelativeLayout>
