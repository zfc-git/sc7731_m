<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_bottom_action"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_bottom_bar_bg"
    android:gravity="center_vertical"
    android:padding="2dp"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/layout_multi_all_select"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:gravity="center"
        android:addStatesFromChildren="true" >

        <TextView
            android:id="@+id/btn_multi_all_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/gallery_bottom_text_color"
            android:layout_weight="1"
            android:textSize="11dip"
            android:drawablePadding="-4dp"
            android:layout_marginTop="-2dp"
            android:paddingBottom="2dip"
            android:drawableTop="@drawable/gallery_selectall_status"
            android:text="@string/text_all_select" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_multi_cancel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1.0"
        android:addStatesFromChildren="true" >

        <TextView
            android:id="@+id/btn_multi_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/gallery_bottom_text_color"
            android:layout_weight="1"
            android:textSize="11dip"
            android:drawablePadding="-4dp"
            android:layout_marginTop="-2dp"
            android:paddingBottom="2dip"
            android:drawableTop="@drawable/gallery_allcancel_status"
            android:text="@string/text_all_cancel" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_multi_confirm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1.0"
        android:addStatesFromChildren="true" >

        <TextView
            android:id="@+id/btn_multi_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/gallery_bottom_text_color"
            android:textSize="11dip"
            android:drawablePadding="-4dp"
            android:layout_marginTop="-2dp"
            android:paddingBottom="2dip"
            android:layout_weight="1"
            android:drawableTop="@drawable/gallery_delete_status"
            android:text="@string/text_delete_image" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_multi_collage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1.0"
        android:addStatesFromChildren="true" >

        <TextView
            android:id="@+id/btn_multi_collage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/gallery_bottom_text_color"
            android:textSize="11dip"
            android:drawablePadding="-4dp"
            android:layout_marginTop="-2dp"
            android:paddingBottom="2dip"
            android:layout_weight="1"
            android:drawableTop="@drawable/gallery_collage_status"
            android:text="@string/text_collage_image" />
    </LinearLayout>
</LinearLayout>