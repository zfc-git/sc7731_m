<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:background="@drawable/aboutus_background_top" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="72dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" >
                <TextView
                    android:id="@+id/tv_app_version"
                    style="?android:attr/textAppearance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="15dip"
                    android:textSize="15dip"
                    android:textColor="#FFFFFF" />
            </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation = "vertical"
        android:layout_weight="2.4"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/aboutus_background_middle" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/aboutus_faq"
                    style="?android:attr/textAppearanceSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#448ccb"
                    android:text = "@string/menu_info_version_content_faq_url"/>

                <TextView
                    android:id="@+id/aboutus_user_manual"
                    style="?android:attr/textAppearanceSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#448ccb"
                    android:layout_marginTop="5dip"
                    android:visibility="gone"
                    android:text = "@string/menu_info_version_content_user_manual_url"/>

                <TextView
                    android:id="@+id/aboutus_support"
                    style="?android:attr/textAppearanceSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#448ccb"
                    android:layout_marginTop="5dip"
                    android:text = "@string/menu_info_version_contact_mail"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2.0"
            android:background="@drawable/aboutus_background_bottom" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/aboutus_copyright"
                    style="?android:attr/textAppearanceSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dip"
                    android:text="@string/menu_info_version_ucam_link"
                    android:textColor="#898b8f" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>