<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/secret_ablum_hint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000"
    android:gravity="center_horizontal" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/secret_ablum_first_show" />

    <TextView
        android:id="@+id/secret_ablum_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/secret_ablum_hint_msg"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:gravity="center"
        android:text="@string/text_secret_ablum_hint_title"
        android:textSize="18sp" />

    <TextView
        android:id="@id/secret_ablum_hint_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/text_to_bottom"
        android:text="@string/text_secret_ablum_hint_msg"
        android:textColor="#1d6699"
        android:textSize="14sp" />

</RelativeLayout>