<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/secret_background" >

    <TextView
        android:id="@+id/secret_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:padding="10dip"
        android:text="@string/text_backup_allimages_title"
        android:textColor="@color/screen_background_white"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/secret_dialog_ll_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/secret_dialog_title"
        android:gravity="left"
        android:paddingLeft="20dip"
        android:paddingRight="20dip" >

        <TextView
            android:id="@+id/secret_dialog_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:gravity="left"
            android:text="@string/text_backup_allimages_msg"
            android:textColor="@color/screen_background_white"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/secret_dialog_ll_detail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip"
        android:paddingBottom="10dip" >

        <Button
            android:id="@+id/secret_dialog_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:text="@string/details_ok"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/settings_item_black_text_color" />
    </LinearLayout>

</RelativeLayout>