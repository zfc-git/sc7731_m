<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/gallery_popup_text_width"
    android:layout_height="wrap_content"
    android:background="@drawable/pupo_background"
    android:orientation="vertical"
    android:padding="8dip" >

    <TextView
        android:id="@+id/popup_lock_photoes"
        android:layout_width="@dimen/gallery_popup_text_width"
        android:layout_height="44dip"
        android:gravity="center_vertical"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:singleLine="true"
        android:text="@string/text_settings_show_hiden_files"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/pupo_list_text" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@drawable/pupo_background_line" />

    <TextView
        android:id="@+id/popup_settings"
        android:layout_width="@dimen/gallery_popup_text_width"
        android:layout_height="44dip"
        android:gravity="center_vertical"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:singleLine="true"
        android:text="@string/text_popup_settings"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/pupo_list_text" />

</LinearLayout>