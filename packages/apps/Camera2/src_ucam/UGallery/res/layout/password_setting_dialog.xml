<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/nav_to_album_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_topbar"
        android:gravity="center_vertical" >

<!--         <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="8dip" >

            <TextView
                android:id="@+id/set_password_cancel"
                style="@style/UCamGalleryTopbarStyle"
                android:drawableLeft="@drawable/gallery_arrow_left_status"
                android:paddingLeft="@dimen/gallery_top_nav_edge_path_padding_left"
                android:text="@string/text_settings_title"
                android:textColor="@android:color/white"
                android:visibility="visible" />
        </RelativeLayout> -->
        <ImageView
            android:id="@+id/set_password_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dip"
            android:background="@drawable/gallery_cancel_status" />
        <ImageView
            android:id="@+id/set_password_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dip"
            android:background="@drawable/gallery_ok_status" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_title_set_pwd"
        android:layout_width="240dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:gravity="center_horizontal"
        android:text="@string/text_settings_setpassword"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/et_entry_pwd"
        android:layout_width="280dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:hint="@string/text_settings_intput_pwd"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/et_entry_pwd_confirm"
        android:layout_width="280dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:hint="@string/text_settings_intput_pwd_again"
        android:inputType="textPassword" />
    <TextView
        android:id="@+id/tv_warning_set_pwd"
        android:layout_width="280dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip"
        android:gravity="center_horizontal"
        android:text="@string/text_settings_setpassword_warning"
        android:textSize="18sp" />

</LinearLayout>