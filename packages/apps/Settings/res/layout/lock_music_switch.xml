<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/lock_music_switch_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lock_music_switch"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="20sp"
            android:layout_marginTop="@dimen/smart_controls_vertical_margin"
            android:layout_marginLeft="@dimen/smart_controls_horizontal_margin"
            android:layout_marginRight="@dimen/smart_controls_horizontal_margin" />

        <TextView
            android:id="@+id/lock_music_switch_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lock_music_switch_summary"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/smart_controls_vertical_margin"
            android:layout_marginLeft="@dimen/smart_controls_horizontal_margin"
            android:layout_marginRight="@dimen/smart_controls_horizontal_margin" />

        <ImageView
            android:id="@+id/lock_music_switch_display"
            android:src="@drawable/lock_music_switch_anim"
            android:contentDescription="@string/lock_music_switch_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/smart_controls_vertical_margin"
            android:layout_marginLeft="@dimen/smart_controls_horizontal_margin"
            android:layout_marginRight="@dimen/smart_controls_horizontal_margin" />
</LinearLayout>