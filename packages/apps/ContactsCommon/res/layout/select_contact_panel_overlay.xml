<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/select_contact"
    android:layout_width="match_parent"
    android:layout_height="34dip"
    android:minHeight = "34dip"
    android:orientation="horizontal"
    android:visibility="gone" >

    <TextView
        android:id="@+id/select_contact_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="8dip"
        android:paddingStart="14dip"
        android:text="@null"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/select_all_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/select_contact_num"
        android:layout_toStartOf="@+id/select_contact_cb"
        android:paddingLeft="4dip"
        android:paddingStart="4dip"
        android:text="@string/select_all_contacts"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#000000"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/select_contact_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="32dip"
        android:layout_marginEnd="32dip"
        android:layout_centerVertical="true"
        android:gravity="center_vertical" />


</RelativeLayout>
