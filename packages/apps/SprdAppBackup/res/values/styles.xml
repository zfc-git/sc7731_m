<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="BackupHoloThemeNewui" parent="@android:style/Theme.Material.Light.DarkActionBar">
           <item name="android:actionMenuTextColor">@drawable/action_menu_textcolor_selector</item>
           <item name="android:actionMenuTextAppearance">@style/ActionMenu_TextAppearance</item>
       <item name="android:spinnerDropDownItemStyle">@style/CustomDropDownItemStyle</item>
       <item name="android:actionBarStyle">@style/MyActionBar</item>
       <item name="android:listViewStyle">@style/MyListView</item>
       <item name="android:actionBarTabStyle">@style/MyActionBarTabView</item>
    </style>

    <style name="CustomDropDownItemStyle" parent="@android:style/Widget.Material.Light.DropDownItem.Spinner">
       <item name="android:textAppearance">@style/CustomDropDownItemTextStyle</item>
    </style>

    <style name="CustomDropDownItemTextStyle" >
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Material.Light.ActionBar">
        <item name="android:background">@drawable/ab_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:displayOptions">showTitle</item>
    </style> 
    <style name="MyListView" parent="@android:style/Widget.Material.Light.ListView">
         <item name="android:textColor">@android:color/black</item>
     </style>
     <!-- SPRD: Bug 416716 Diffrerntiate the selected tab in SprdAppBackup @{ -->
     <!-- <item name="android:textColor">@color/white</item> @} -->
     <style name="MyActionBarTabView" parent="@android:style/Widget.Material.Light.ActionBar.TabView">
        <item name="android:background">@drawable/action_bar_tab</item>
        <item name="android:textColor">@color/tab_text_color</item>
        <item name="android:showDividers">none</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ActionMenu_TextAppearance" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Menu">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
