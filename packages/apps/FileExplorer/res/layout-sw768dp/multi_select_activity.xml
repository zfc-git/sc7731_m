<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/select"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:paddingLeft="8dp"
        android:paddingRight="4dp"
        android:background="@drawable/line"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/select_text"
            android:text="@string/select_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="58dip"
            android:textSize="18dip"
            android:textColor="@color/multi_select_activity_text_color" />

        <CheckBox
            android:id="@+id/select_all_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="52dp"
             />

        <TextView
            android:id="@+id/selece_all_file"
            android:text="@string/select_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/select_text"
            android:layout_alignBottom="@+id/select_text"
            android:layout_marginRight="20dip"
            android:layout_toLeftOf="@+id/select_all_cb"
            android:textSize="18dip"
            android:textColor="@color/multi_select_activity_text_color" />
    </RelativeLayout>

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/listview_divider_sprd" />

</LinearLayout>
